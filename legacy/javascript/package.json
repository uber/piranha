{
    "name": "piranhaJS",
    "version": "0.0.1",
    "description": "Stale flag removal for JavaScript code",
    "main": "src/refactor.js",
    "bin": "src/piranha.js",
    "pkg": {
        "assets": "config/properties.json"
    },
    "scripts": {
        "test": "mocha",
        "only-test": "mocha --inspect-brk test/test_refactor.js",
        "prettier": "prettier --write './{src,test}/**/*.js'",
        "check_format": "prettier --check './{src,test}/**/*.js'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./{src,test}/**/*.js": [
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uber/piranha.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/uber/piranha/issues"
    },
    "homepage": "https://github.com/uber/piranha/blob/master/javascript/README.md",
    "dependencies": {
        "@babel/core": "^7.23.9",
        "argparse": "^1.0.10",
        "chai": "^4.2.0",
        "colors": "^1.4.0",
        "fast-glob": "^3.3.2",
        "mocha": "^8.0.1",
        "recast": "^0.19.1",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "eslint": "^7.6.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5"
    }
}
